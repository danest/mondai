<script type="text/javascript" charset="utf-8">
	if(window.opener) {
	    window.opener.location.reload(true);
	    window.close()
	  }
</script>
<h1>Mondai.me</h1>

<div id="signin">
	<div class="regular signinsubmit">
	<h3>Sign In</h3>
	<%= form_for("user", :url => user_session_path) do |f| %>
	  <div class="singleField">
		<%= f.label :email %>
	    <%= f.email_field :email %></div>
	  <div class="singleField">
		<%= f.label :password %>
	  	<%= f.password_field :password %>
	  </div>
	   <div class="singleField">
		<%= f.check_box :remember_me %> 
		<%= f.label :remember_me %>
	   </div>

	  <p><%= positive_button_submit_tag "Sign in" %></p>
	<% end %>
	</div>
</div>
<div id="signup">
	<%= pill_button_link_to "Sign Up With Facebook", user_omniauth_authorize_path(:facebook), :class => "popup", :"data-width" => 600, :"data-height" => 400 %>
	<div class="regular hsubmit">
		<%= form_for("user", :url => user_registration_path) do |f| %>
		  <div class="singleField"><label>Name</label><%= f.text_field :name %></div>
		  <div class="singleField"><label>Email</label><%= f.text_field :email %></div>
		  <div class="singleField"><label>Password</label> <%= f.password_field :password %></div>
		  <div class="singleField submit"><%= positive_button_submit_tag 'Sign up' %></div>
		  <div class="clear"></div>
		<% end %>
	</div>
</div>
