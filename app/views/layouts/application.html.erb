<!DOCTYPE html>
<html>
<head>
  <title>Mondai.me</title>
  <%= css3buttons_stylesheets %>
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="topbar">
	<div class="topnav_container">
		<h1><%= link_to "Mondai.me", root_path , :class => :home %></h1>
	
		<% if current_user %>
			<ul id="topnav">
				<li>
					<form action="<%= search_path %>" method="get" >
				    <%= text_field_tag :search, params[:search], :class => 'searchBox', :placeholder => "Search for a Question" %>
				</li>
				<li>
					<%= search_button_tag "Search", :name => nil, :class=> 'search' %>
				  </form>
				</li>
			</ul>
			<ul id="toplinks">
				<%= button_group do %>
					<%= button_link_to "Profile", show_user_path(current_user.normalized_name, current_user) %>
					<%= button_link_to "Log Out", destroy_user_session_path %>		
				<% end %>
			</ul>
			<% else %>
				<ul id="topnav">
					<li><%= big_primary_button_link_to "Sign Up With Facebook", user_omniauth_authorize_path(:facebook), :class => "popupp", :"data-width" => 600, :"data-height" => 400 %></li>
					<li><a href="#" class="pu">Learn More Pop Up</a></li>
				</ul>
				<ul id="toplinks">
					<li>
						<%= primary_button_link_to "Log In With FB", user_omniauth_authorize_path(:facebook), :class => "popupp", :"data-width" => 600, :"data-height" => 400 %>
					</li>
				</ul>
		<% end %>
	</div>
</div>
<div class="clear"></div>
	<% if current_user %>
  		<div class="container">
	<% else %>
		<div class="mainpage">
	<% end %>
	<div id="flashes">

	  <% if flash[:notice] %>
	    <p id="flash_notice" class="messages notice"><%= flash[:notice] %></p>
	    <%= javascript_tag "$('#flash_notice').delay(3000).fadeOut('slow');" %>
	  <% end %>

	  <% if flash[:error] || flash[:errors] %>
	    <p id="flash_errors" class="messages errors alert"><%= flash[:error] || flash[:errors] %></p>
	    <%= javascript_tag "$('#flash_errors').delay(3000).fadeOut('slow');" %>
	  <% end %>

	  <% flash[:error] = flash[:errors] = flash[:notice] = nil %>
	</div>
    <%= yield %>
 </div>
</body>
</html>
