<!DOCTYPE html>
<html>
<head>
  <title>Mondai.me</title>
  <%= css3buttons_stylesheets %>
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="topbar">
	<div class="container">
		<h1><%= link_to "Mondai.me", root_path , :class => :home %></h1>
	
		<% if current_user %>
			<ul id="topnav">
				<li>
					<form action="search" method="get" accept-charset="utf-8">
						<input class= "searchBox" type="text" name="search" placeholder="Search for a Question" />
						<input class="search" type="submit" value="Search">
					</form>
				</li>
				<li>
					<%= link_to "Profile", show_user_path(current_user.normalized_name) %>
				</li>
				<li>
					<%= link_to "Log Out", destroy_user_session_path %>
				</li>
				<li>
				
				</li>
			</ul>
		<% end %>
	</div>
</div>
  <div class="container">
    <% if notice  %>
      <p class="notice"><%= notice %></p>
    <% end %>
	<% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>

 </div>
</body>
</html>
