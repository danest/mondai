<div id="question_container">	
	<div id="askquestion">
		<%= add_button_link_to "Ask A Question On This Topic" , new_question_path %>
	</div>
	<h1><%= @topic.name %> Questions</h1>
	<% @topic.questions.each do |question| %>
		<div class="question">
			<div class="question_image">
				<%= image_tag question.user.picture %>
			</div>
			<div class="question_content">
				<%= link_to question.content, show_question_path(question.normalized_name, question) %><br />
				<%= question.description %>
			</div>
		</div><div class="clear"></div>	
	<% end %>
</div>